@model todo_web_app2.Models.LoginSignupViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container">
    <div class="row m-2">
        <div class="col-6 offset-3">
            
            <div class="text-center">
                <h1 class="text-info">User Registration Form</h1>
            </div>

            <form method="POST" action="SignUp">
                <div class="form-group">
                    <label asp-for="user_Name"></label>
                    <input type="text" asp-for="user_Name" class="form-control" autocomplete="off" />
                </div>
                
                    <div class="form-group">
                        <label asp-for="password"></label>
                        <input type="password" asp-for="password" class="form-control" autocomplete="off" placeholder="Enter Password"/>
                    </div>

                <div class="form-group">
                    <label asp-for="confirm_Password"></label>
                    <input type="password" asp-for="confirm_Password" class="form-control" autocomplete="off" placeholder="Enter  Password Again" />
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="branch_Name"></label>
                        <input type="Text" value="Not Specified" asp-for="branch_Name" class="form-control" autocomplete="off" placeholder="Enter branch name" />
                    </div>
                    <div class="form-group">
                   
                    <input type="submit"  class="btn btn-success btn-lg m-1 float-right" value="Registration" />
                </div>



            </form>
        </div>
    </div>
</div>

