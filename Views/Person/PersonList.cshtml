@model IEnumerable<todo_web_app2.Models.Person>

@{
    ViewData["Title"] = "Person List";
}

<h1>PersonList</h1>

<p class="float-right">
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>
                @Html.DisplayNameFor(model => model.person_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.person_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.device_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.is_Active)
            </th>
           
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                
                <td>
                    @Html.ActionLink("Edit", "Create", new { item.person_Id, item.person_Name,item.is_Active,item.device_Name,item.dev_Id },new{ @class = "btn btn-success"}) |

                    @Html.ActionLink("Delete", "Delete", new {id= item.person_Id  }, new {@class="btn btn-danger", onClick="return confirm('Do you really want to delete this record ?')"})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.person_Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.person_Name)
            </td>
               <td>
                   @Html.DisplayFor(modelItem => item.device_Name)
               </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_Active)
            </td>
            
           
        </tr>
}
    </tbody>
</table>
